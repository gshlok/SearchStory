{
    "version": 2,
    "builds": [
        {
            "src": "dist/vercel-server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "client/**",
                    "server/**",
                    "shared/**",
                    "attached_assets/**",
                    "dist/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "dist/vercel-server.js"
        },
        {
            "src": "/(.*)",
            "dest": "dist/vercel-server.js"
        }
    ],
    "buildCommand": "npm run build && npm run build:vercel",
    "outputDirectory": "dist/public"
}