{
    "version": 2,
    "builds": [
        {
            "src": "server/index.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "client/**",
                    "server/**",
                    "shared/**",
                    "attached_assets/**",
                    "dist/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "server/index.ts"
        }
    ],
    "buildCommand": "npm run build",
    "outputDirectory": "dist/public"
}